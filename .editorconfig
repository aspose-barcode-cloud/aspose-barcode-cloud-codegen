# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{bat,cmd}]
end_of_line = crlf

[*.py]
indent_style = space
indent_size = 4

[{CODEOWNERS,Makefile}]
indent_style = tab

[*.mustache]
insert_final_newline = false
